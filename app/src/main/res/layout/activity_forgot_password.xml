<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.workshop.register_login.ForgotPassword"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_fpwd"
        android:background="@drawable/forgot_pwd1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/email1"
        android:hint="Type your Registered E-Mail"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_rect1"
        android:layout_below="@+id/image_fpwd"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/send1"
        android:background="@drawable/round_rect"
        android:text="Send"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/colorPrimary"/>

</RelativeLayout>
